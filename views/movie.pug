extends layout 

block content 
    h1= movie.name 
    h5 Posted by: #{posted_by}
    p Description: #{movie.description}
    p Rating: #{movie.rating}
    p Year: #{movie.year}
    label Genres:
    ul
    each genre in movie.genres
        li #{genre}
        br
    br
    hr
    //- If user logged in
    if user
        if user._id == movie.posted_by
            ul
                li.nav-item
                    a.btn.btn-default(href="/movie/edit/" + movie._id) Edit Movie
                li.nav-item
                    a.btn.delete-movie(href="#", data-id=movie._id) Delete Movie